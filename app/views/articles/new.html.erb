<h1 class="text-center">Nuevo articulo</h1>

<div class="row">
    <div class="col-sm-12 col-md-6 col-md-offset-3">
        <% if @article.errors.any?  %>
            <div class="alert alert-danger alert-dismissible" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
                  <strong>Ocurrieron algunos errores</strong>
                  <ul>
                      <% @article.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                  </ul>
            </div>
        <% end %>
        <%= form_for :article, url: articles_path do |f| %>
            <div class="form-group">
                <%= f.label :title, "Titulo" %><br>
                <%= f.text_field :title, class:'form-control', rows: 20 %><br>
            </div>
            <div class="form-group">
                <%= f.label :text, "Contenido" %><br>
                <%= f.text_area :text, class:'form-control', id:"article-text"%><br>
            </div>
            <p class="text-right">
                <%= f.submit "Gurdar articulo", class: 'btn btn-primary' %>
            </p>
        <% end %>
        <%= link_to "Regresar", articles_path, class:'text-right' %>
    </div>
</div>
